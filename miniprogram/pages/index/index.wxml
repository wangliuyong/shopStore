<!-- index.wxml -->
<view class="container">
  <view>
    <van-search value="{{ search }}" placeholder="请输入搜索关键词" show-action bind:search="onSearch" bind:cancel="onCancel" />
  </view>
  <view class="goodWrap">
    <van-tabs active="{{ active }}" bind:click="clickTab">
      <block wx:for="{{allGoods}}" wx:key="index">
        <van-tab title="{{item.category}}">
          <van-row>
            <van-col span="12" wx:for="{{item.goods}}" wx:key="{{index}}">
              <view bindtap="clickGood" id="{{item.id}}" class="goodCard">
                <image style="width: 100%; background-color: #eeeeee;"  src="{{item.img}}"></image>
                <view>￥{{item.name}}</view>
                <view>￥{{item.price}}</view>
                <view>剩余:{{item.stock}}</view>
              </view>
            </van-col>
          </van-row>
        </van-tab>
      </block>
    </van-tabs>
  </view>
  <view></view>
</view>